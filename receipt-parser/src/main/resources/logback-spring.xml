<configuration>
    <springProperty scope="context" name="logId" source="app.logging.log-name" defaultValue="receipt-processing-service"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%thread] %logger{36} [event=%X{receipt.eventId:-} bucket=%X{receipt.bucket:-} object=%X{receipt.object:-} stage=%X{receipt.stage:-} owner=%X{receipt.ownerId:-}] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="dev.pekelund.pklnd" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.springframework.ai" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <springProfile name="prod">
        <appender name="CLOUD" class="com.google.cloud.logging.logback.LoggingAppender">
            <log>${logId}</log>
            <flushLevel>WARN</flushLevel>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="CLOUD"/>
        </root>

        <logger name="dev.pekelund.pklnd" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="CLOUD"/>
        </logger>

        <logger name="org.springframework.ai" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="CLOUD"/>
        </logger>
    </springProfile>
</configuration>
