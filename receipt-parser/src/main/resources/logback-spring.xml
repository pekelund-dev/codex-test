<configuration>
    <springProperty scope="context" name="projectId" source="app.logging.project-id" defaultValue=""/>
    <springProperty scope="context" name="functionName" source="app.logging.log-name" defaultValue="receipt-processing-service"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%thread] %logger{36} [event=%X{receipt.eventId:-} bucket=%X{receipt.bucket:-} object=%X{receipt.object:-} stage=%X{receipt.stage:-} owner=%X{receipt.ownerId:-}] - %msg%n</pattern>
        </encoder>
    </appender>

    <springProfile name="prod">
        <appender name="CLOUD" class="com.google.cloud.logging.logback.LoggingAppender">
            <log>projects/${projectId:-${GOOGLE_CLOUD_PROJECT:-${GCP_PROJECT:-unknown-project}}}/logs/${functionName}</log>
            <flushLevel>WARN</flushLevel>
        </appender>
    </springProfile>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <springProfile name="prod">
            <appender-ref ref="CLOUD"/>
        </springProfile>
    </root>

    <logger name="dev.pekelund.pklnd" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <springProfile name="prod">
            <appender-ref ref="CLOUD"/>
        </springProfile>
    </logger>


</configuration>
